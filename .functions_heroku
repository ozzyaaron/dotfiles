# hlog <integer> => heroku logs -t -a iex-app-staging-pr-<id>
# hlog <string> => heroku logs -t -a <string>
function hlog() {
  if [ $1 -eq $1 2> /dev/null ]; then
    echo heroku logs -t -a iex-app-staging-pr-$1
    heroku logs -t -a iex-app-staging-pr-$1
  else
    echo heroku logs -t -a $1
    heroku logs -t -a $1
  fi
}

# hrc <integer> => heroku run rails c -a iex-app-staging-pr-<id>
# hrc <string> => heroku run rails c -a <string>
function hrc() {
  if [ $1 -eq $1 2> /dev/null ]; then
    echo heroku run rails console -a iex-app-staging-pr-$1
    heroku run rails console -a iex-app-staging-pr-$1
  else
    echo heroku run rails console -a $1
    heroku run rails console -a $1
  fi
}

# hps <integer> => heroku ps -a iex-app-staging-pr-<id>
# hps <string> => heroku ps -a <string>
function hps() {
  if [ $1 -eq $1 2> /dev/null ]; then
    echo heroku ps -a iex-app-staging-pr-$1
    heroku ps -a iex-app-staging-pr-$1
  else
    echo heroku ps -a $1
    heroku ps -a $1
  fi
}
